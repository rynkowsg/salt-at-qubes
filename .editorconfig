root = true

[*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf

[*.{md,toml,json}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2
max_line_length = 120

[*.py]
indent_size = 4
max_line_length = 120
indent_style = tab

[*.{sls,top,jinja}]
max_line_length = 160
